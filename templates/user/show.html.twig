{% trans_default_domain 'user' %}
{% extends 'form/layout.html.twig' %}

{% block title %}{% trans %}title.show{% endtrans %}{% endblock %}

{% block main %}
    <div class="card">
        <div class="card-header d-flex">
            <h3 class="card-header-title">
                {% trans %}entity{% endtrans %}: {{ user.id }}
            </h3>
            <div class="toolbar ml-auto">
                <a href="{{ path('flexphp.user.users.index') }}" class="btn btn-outline-secondary">
                    <i class="fa fa-list-ol" aria-hidden="true"></i>
                    <span class="btn-text">{% trans from 'messages' %}action.list{% endtrans %}</span>
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="form-group"><label>{% trans %}label.email{% endtrans %}</label><div class="form-control-plaintext">{{ user.email }}</div></div>
            <div class="form-group"><label>{% trans %}label.name{% endtrans %}</label><div class="form-control-plaintext">{{ user.name }}</div></div>
            {# <div class="form-group"><label>{% trans %}label.password{% endtrans %}</label><div class="form-control-plaintext">{{ user.password }}</div></div> #}
            <div class="form-group"><label>{% trans %}label.password{% endtrans %}</label><div class="form-control-plaintext">{{ user.timezone }}</div></div>
            <div class="form-group"><label>{% trans %}label.statusId{% endtrans %}</label><div class="form-control-plaintext">{{ user.statusIdInstance.name|default('-') }}</div></div>
            <div class="form-group"><label>{% trans %}label.lastLoginAt{% endtrans %}</label><div class="form-control-plaintext">{{ user.lastLoginAt ? user.lastLoginAt|date('Y-m-d H:i:s') : '-' }}</div></div>
            <div class="form-group"><label>{% trans %}label.createdAt{% endtrans %}</label><div class="form-control-plaintext">{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '-' }}</div></div>
            <div class="form-group"><label>{% trans %}label.updatedAt{% endtrans %}</label><div class="form-control-plaintext">{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '-' }}</div></div>
            <div class="form-group"><label>{% trans %}label.createdBy{% endtrans %}</label><div class="form-control-plaintext">{{ user.createdByInstance.name|default('-') }}</div></div>
            <div class="form-group"><label>{% trans %}label.updatedBy{% endtrans %}</label><div class="form-control-plaintext">{{ user.updatedByInstance.name|default('-') }}</div></div>
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col">
                    {{ include('@FlexPHPUser/user/_delete_form.html.twig', {user: user}, with_context = false) }}
                </div>

                <div class="col text-right">
                    <a href="{{ path('flexphp.user.users.edit', {id: user.id}) }}" class="btn btn-outline-primary">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                        <span class="btn-text">{% trans from 'messages' %}action.edit{% endtrans %}</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
